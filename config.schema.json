{
    "pluginAlias": "moneta-thermostat-platform",
    "pluginType": "platform",
    "singular": true,
    "schema": {
        "type": "object",
        "properties": {
            "name": {
                "title": "Name",
                "type": "string",
                "required": true,
                "default": "Delta Thermostat"
            },
            "accessToken": {
                "title": "Bearer Token",
                "type": "string",
                "required": true,
                "default": ""
            },
            "zonesNames": {
                "title": "Zone Names",
                "type": "array",
                "required": false,
                "items": {
                    "title": "Zone Name",
                    "type": "string"
                }
            },
            "thermostatPollingInterval": {
                "title": "Polling Interval API (unit: Seconds, 60s if no setted)",
                "type": "number",
                "required": false,
                "default": 60
            }
        }
    }
}
