{
    "pluginAlias": "moneta-thermostat-platform",
    "pluginType": "platform",
    "singular": true,
    "schema": {
        "type": "object",
        "properties": {
            "name": {
                "title": "Name",
                "type": "string",
                "required": true,
                "default": "Delta Thermostat"
            },
            "access_token": {
                "title": "AccessToken",
                "type": "string",
                "required": true,
                "default": ""
            },
            "accessoryNames": {
                "title": "Accessories Names",
                "type": "array",
                "required": false,
                "items": {
                    "title": "Accessory name",
                    "type": "string"
                }
            },
            "thermostatPollingInterval": {
                "title": "Polling Interval API (Seconds)",
                "type": "number",
                "required": false
            }
        }
    }
}
