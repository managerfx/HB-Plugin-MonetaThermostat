        "homebridge": "^1.6.1",
        "nodemon": "^2.0.13",
        "rimraf": "^3.0.2",
        "ts-node": "^10.3.0",
        "typescript": "^4.4.4"
    },
    "dependencies": {
        "@types/lodash": "^4.14.191",
        "axios": "^1.2.1",
        "lodash": "^4.17.21",
